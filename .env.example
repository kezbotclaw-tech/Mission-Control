# Mission Control - Environment Variables Template
# Copy this file to .env and fill in your values for local development
# For Railway deployment, set these in Railway Dashboard > Variables

# Required: Secret key for Flask sessions (generate a strong random string)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Optional: Database URL (Railway provides this automatically)
# For local development with SQLite, leave this empty
# DATABASE_URL=postgresql://user:password@host:port/database

# Optional: SQLite path for local development (used if DATABASE_URL not set)
SQLITE_PATH=./data/mission_control.db

# Optional: Port to run on (Railway sets this automatically)
PORT=5000

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
